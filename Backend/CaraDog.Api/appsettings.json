{
  "ConnectionStrings": {
    "CaraDogDb": "server=localhost;port=3306;database=caradog;user=app;password=apppw;"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      }
    ],
    "Enrich": [ "FromLogContext" ]
  },
  "Logging": {
    "FilePath": "Logs/log-.txt",
    "DatabaseTable": "LogEntries"
  },
  "Email": {
    "SmtpHost": "smtp.gmail.com",
    "SmtpPort": 587,
    "SmtpUser": "",
    "SmtpPassword": "",
    "FromName": "CaraDog",
    "FromEmail": "noreply@caradog.local",
    "EnableSsl": true
  },
  "Payments": {
    "Paypal": {
      "Mode": "Simulated"
    },
    "Stripe": {
      "Mode": "Scaffold"
    }
  },
  "AllowedHosts": "*"
}
